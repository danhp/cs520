#!/bin/bash
program=$(<$1);
file=$(basename $1);
pref=${file%.*};

if [ "$#" -eq 0 ]; then
	make -C src/
else
	rm outputs/$pref.* > /dev/null 2>&1;

	./src/golite pretty $1 1> /dev/null;
	# Only write if successful
	if [ "$?" -eq 0 ]; then
		./src/golite pretty $1 1> outputs/$pref.pretty.go;
	fi
fi
